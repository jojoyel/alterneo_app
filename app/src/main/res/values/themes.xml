<resources xmlns:tools="http://schemas.android.com/tools">
	<!-- Base application theme. -->
	<style name="Theme.Alterneo_app" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
		<!-- Primary brand color. -->
		<item name="colorPrimary">@color/brand_red</item>
		<item name="colorPrimaryVariant">@color/brand_red_dark</item>
		<item name="colorOnPrimary">@color/white</item>
		<!-- Secondary brand color. -->
		<item name="colorSecondary">@color/brand_purple</item>
		<item name="colorSecondaryVariant">@color/brand_purple_dark</item>
		<item name="colorOnSecondary">@color/white</item>
		<!-- Status bar color. -->
		<item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
		<!-- Customize your theme here. -->
	</style>

	<style name="ImportantText" parent="Widget.AppCompat.TextView">
		<item name="android:textStyle">bold</item>
	</style>
</resources>